{
  "name": "toggle-settings-changes",
  "description": "Toggle specific settings changes",
  "version": "0.0.1",
  "publisher": "tcg",
  "repository": "https://github.com/tcg/...",
  "engines": {
    "vscode": "^1.32.0"
  },
  "activationEvents": [
    "onCommand:extension.main"
  ],
  "main": "./extension.js",
  "contributes": {
    "commands": [
      {
        "command": "extension.main",
        "title": "Toggle Settings"
      },
      {
        "command": "extension.reset",
        "title": "Toggle Settings - Reset state"
      }
    ],
    "configuration": {
      "title": "ToggleSettingsChanges",
      "properties": {
        // "toggleSettingsChanges.settingsAreToggled": {
        //   "scope": "resource",
        //   "type": "boolean",
        //   "default": false,
        //   "description": "Whether the currently used settings are in a toggled state. DO NOT EDIT BY HAND."
        // },
        "toggleSettingsChanges.settingsToToggle": {
          "scope": "resource",
          "type": "object",
          "default":
              {
                  "window.zoomLevel": 2, // default: 0
                  // "editor.fontSize": 22, // 12
                  // "terminal.integrated.fontSize": 16, // 12
                  // "scm.diffDecorations": "none", // "all"
                  // "workbench.statusBar.visible": false, // true
                  // "editor.cursorBlinking": "solid", // blink
                  // "workbench.activityBar.visible": false
              }
          ,
          "description": "An object with the setting name as the object key and the setting value (string, boolean, object, etc.) as the object value."
        }
      }
    }
  },
  "scripts": {},
  "devDependencies": {
    "@types/vscode": "^1.32.0"
  }
}
